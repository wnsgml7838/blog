{
  "brand": {
    "name": "토스 테크",
    "tagline": "토스 기술 블로그",
    "logo": {
      "type": "text",
      "font": "bold sans-serif"
    }
  },
  "colors": {
    "primary": {
      "background": "#FFFFFF",
      "text": "#191919",
      "accent": "#3182F6"
    },
    "secondary": {
      "backgroundLight": "#F9FAFB",
      "backgroundGray": "#F2F4F6",
      "textMuted": "#6B7684",
      "border": "#E5E8EB"
    },
    "interactive": {
      "hover": "#1B64DA",
      "focus": "#3182F6",
      "active": "#1E40AF"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "Toss Product Sans, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "code": "'SF Mono', Monaco, monospace"
    },
    "scale": {
      "hero": {
        "fontSize": "48px",
        "lineHeight": "1.2",
        "fontWeight": "700"
      },
      "h1": {
        "fontSize": "36px",
        "lineHeight": "1.3",
        "fontWeight": "700"
      },
      "h2": {
        "fontSize": "28px",
        "lineHeight": "1.4",
        "fontWeight": "600"
      },
      "h3": {
        "fontSize": "20px",
        "lineHeight": "1.5",
        "fontWeight": "600"
      },
      "body": {
        "fontSize": "16px",
        "lineHeight": "1.6",
        "fontWeight": "400"
      },
      "small": {
        "fontSize": "14px",
        "lineHeight": "1.5",
        "fontWeight": "400"
      }
    }
  },
  "layout": {
    "maxWidth": "1200px",
    "containerPadding": {
      "desktop": "40px",
      "tablet": "24px",
      "mobile": "16px"
    },
    "grid": {
      "columns": 12,
      "gap": "24px"
    },
    "spacing": {
      "xs": "8px",
      "sm": "16px",
      "md": "24px",
      "lg": "32px",
      "xl": "48px",
      "xxl": "64px"
    }
  },
  "components": {
    "navigation": {
      "style": "sticky",
      "height": "64px",
      "background": "rgba(255, 255, 255, 0.95)",
      "backdropFilter": "blur(10px)",
      "borderBottom": "1px solid #E5E8EB",
      "items": {
        "padding": "0 16px",
        "fontSize": "15px",
        "fontWeight": "500",
        "color": "#191919",
        "hoverColor": "#3182F6"
      }
    },
    "card": {
      "background": "#FFFFFF",
      "borderRadius": "16px",
      "padding": "24px",
      "boxShadow": "0 2px 8px rgba(0, 0, 0, 0.04)",
      "hover": {
        "transform": "translateY(-2px)",
        "boxShadow": "0 8px 24px rgba(0, 0, 0, 0.08)",
        "transition": "all 0.2s ease"
      }
    },
    "button": {
      "primary": {
        "background": "#3182F6",
        "color": "#FFFFFF",
        "padding": "12px 24px",
        "borderRadius": "8px",
        "fontSize": "15px",
        "fontWeight": "600",
        "hover": {
          "background": "#1B64DA"
        }
      },
      "secondary": {
        "background": "#F2F4F6",
        "color": "#191919",
        "padding": "12px 24px",
        "borderRadius": "8px",
        "fontSize": "15px",
        "fontWeight": "500",
        "hover": {
          "background": "#E5E8EB"
        }
      }
    },
    "tag": {
      "background": "#F2F4F6",
      "color": "#6B7684",
      "padding": "6px 12px",
      "borderRadius": "6px",
      "fontSize": "13px",
      "fontWeight": "500"
    },
    "articleCard": {
      "title": {
        "fontSize": "20px",
        "fontWeight": "600",
        "color": "#191919",
        "marginBottom": "8px"
      },
      "description": {
        "fontSize": "15px",
        "color": "#6B7684",
        "lineHeight": "1.5",
        "marginBottom": "16px"
      },
      "metadata": {
        "fontSize": "14px",
        "color": "#8B95A1",
        "display": "flex",
        "gap": "8px"
      }
    }
  },
  "animations": {
    "transition": {
      "fast": "0.15s ease",
      "normal": "0.2s ease",
      "slow": "0.3s ease"
    },
    "hover": {
      "scale": "scale(1.02)",
      "opacity": "0.8"
    }
  },
  "responsive": {
    "breakpoints": {
      "mobile": "0px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1440px"
    }
  },
  "features": {
    "darkMode": false,
    "stickyHeader": true,
    "smoothScroll": true,
    "lazyLoading": true,
    "infiniteScroll": false,
    "pagination": true
  },
  "content": {
    "categories": [
      "전체",
      "개발",
      "데이터/ML",
      "디자인",
      "프로덕트"
    ],
    "articleLayout": "card-grid",
    "cardsPerRow": {
      "desktop": 3,
      "tablet": 2,
      "mobile": 1
    }
  },
  "footer": {
    "background": "#FAFBFC",
    "padding": "48px 0",
    "links": {
      "color": "#6B7684",
      "fontSize": "14px",
      "hoverColor": "#191919"
    }
  }
}